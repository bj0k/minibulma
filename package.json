{
  "name": "@bj0k/minibulma",
  "version": "0.1.2-build2",
  "description": "Minimalistic build for Bulma CSS framework",
  "private": true,
  "scripts": {
    "build:full": "sass -q -I node_modules/bulma/sass src/sass/config.scss:dist/bulma.css",
    "build:min": "sass -q --style compressed -I node_modules/bulma/sass src/sass/config.scss:dist/bulma.min.css",
    "build": "npm run build:full && npm run build:min"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "bj <g4uohr79x@mozmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bulma": "0.9.4",
    "sass": "^1.45.1"
  },
  "volta": {
    "node": "18.12.1"
  }
}
