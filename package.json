{
  "name": "bulma-minimal-bundle",
  "version": "0.1.0",
  "description": "Minimalistic build for Bulma CSS framework",
  "scripts": {
    "build": "sass -q -I node_modules/bulma/sass src/sass/config.scss:dist/bulma.css",
    "build:min": "sass -q --style compressed -I node_modules/bulma/sass src/sass/config.scss:dist/bulma.min.css",
    "build:all": "npm run build && npm run build:min"
  },
  "files": ["dist"],
  "keywords": [],
  "author": "bj <g4uohr79x@mozmail.com>",
  "license": "MIT",
  "dependencies": {
    "bulma": "^0.9.3"
  },
  "devDependencies": {
    "sass": "^1.45.1"
  }
}
